{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true,
        "mongo": true,
        "mocha": true
    },
    "plugins": [
        "import"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4]
    }
}